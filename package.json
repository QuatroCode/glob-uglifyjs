{
  "name": "glob-uglifyjs",
  "version": "0.4.1",
  "description": "Uglify JS files with glob pattern.",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "test": "tsc -p . --noEmit"
  },
  "keywords": [
    "uglify",
    "minify",
    "recursive",
    "uglify-js",
    "uglifyjs",
    "mange",
    "glob",
    "folders"
  ],
  "files": [
    "dist",
    "**/*.md"
  ],
  "author": "Giedrius Grabauskas <giedrius@quatrodev.com>  (https://github.com/GiedriusGrabauskas)",
  "bugs": "https://github.com/SimplrJS/glob-uglifyjs/issues",
  "repository": "SimplrJS/glob-uglifyjs",
  "homepage": "https://github.com/SimplrJS/glob-uglifyjs",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "glob": "^7.1.1",
    "uglify-js": "^2.8.21",
    "yargs": "^7.0.2",
    "@types/glob": "^5.0.30",
    "@types/uglify-js": "^2.6.28",
    "@types/yargs": "6.6.0"
  },
  "bin": {
    "glob-uglifyjs": "./dist/cli.js"
  }
}
