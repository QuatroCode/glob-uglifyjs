{
  "name": "glob-uglifyjs",
  "version": "1.0.0",
  "description": "Uglify JS files with glob pattern.",
  "main": "dist/main.js",
  "types": "@types/main.d.ts",
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "test": "tsc -p . --noEmit"
  },
  "keywords": [
    "uglify",
    "minify",
    "recursive",
    "uglify-js",
    "uglifyjs",
    "mange",
    "glob",
    "folders"
  ],
  "files": [
    "dist",
    "@types",
    "**/*.md"
  ],
  "author": "SimplrJS <simplr@quatrodev.com> (https://github.com/simplrjs)",
  "contributors": [
    "Giedrius Grabauskas <giedrius@quatrodev.com>  (https://github.com/GiedriusGrabauskas)"
  ],
  "bugs": "https://github.com/SimplrJS/glob-uglifyjs/issues",
  "repository": "SimplrJS/glob-uglifyjs",
  "homepage": "https://github.com/SimplrJS/glob-uglifyjs",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@types/yargs": "6.6.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "@types/glob": "^5.0.33",
    "@types/globby": "^6.1.0",
    "@types/fs-extra": "^4.0.3",
    "@types/uglify-js": "^2.6.28",
    "fs-extra": "^4.0.2",
    "globby": "^6.1.0",
    "uglify-js": "^3.1.6",
    "yargs": "^7.0.2"
  },
  "bin": {
    "glob-uglifyjs": "./dist/cli.js"
  }
